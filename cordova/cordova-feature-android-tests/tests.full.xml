<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Cordova Features" name="cordova-feature-android-tests">
    <set name="Feature_auto" type="pyunit">
      <testcase component="Cordova Features/Mobile Spec" execution_type="auto" id="CrossWalk_Cordova_Mobile_Spec_Install" priority="P0" purpose="Validate 'cordova_mobile_spec' app can be installed successfully" status="approved" type="Functional">
        <description>
          <test_script_entry>/opt/cordova-feature-android-tests/feature/mobilespec_install.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/Mobile Spec" execution_type="auto" id="CrossWalk_Cordova_Mobile_Spec_Launch" priority="P0" purpose="Validate 'cordova_mobile_spec'  app can be launched successfully" status="approved" type="Functional">
        <description>
           <test_script_entry>/opt/cordova-feature-android-tests/feature/mobilespec_launch.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/Mobile Spec" execution_type="auto" id="CrossWalk_Cordova_Mobile_Spec_Close" priority="P0" purpose="Validate 'cordova_mobile_spec' app can be closed successfully" status="approved" type="Functional">
        <description>
          <test_script_entry>/opt/cordova-feature-android-tests/feature/mobilespec_close.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/Mobile Spec" execution_type="auto" id="CrossWalk_Cordova_Mobile_Spec_Uninstall" priority="P0" purpose="Validate 'cordova_mobile_spec' app can be uninstalled successfully" status="approved" type="Functional">
        <description>
           <test_script_entry>/opt/cordova-feature-android-tests/feature/mobilespec_uninstall.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/Mobile Spec" execution_type="auto" id="CrossWalk_Cordova_Remote_Debug_Pack" priority="P0" purpose="Validate Cordova debug apk could be packed successfully" status="approved" type="Functional">
        <description>
          <test_script_entry>/opt/cordova-feature-android-tests/feature/remotedebugging_pack.py</test_script_entry>
        </description>
      </testcase>
    </set>
    <set name="Feature_manual" type="js">
      <testcase component="Cordova Features/Mobile Spec" execution_type="manual" id="CrossWalk_Cordova_Mobile_Spec_Icon" priority="P0" purpose="Validate if 'cordova_mobile_spec' app icon display normally" status="approved" type="Functional">
        <description>
          <pre_condition>
            1. Make sure 'mobilespec.apk' app is installed;
            2. Make sure there some webapps are available.
          </pre_condition>
          <test_script_entry>/opt/cordova-feature-android-tests/feature/CrossWalk_Cordova_Mobile_Spec_Icon.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/Mobile Spec" execution_type="manual" id="CrossWalk_Cordova_Remote_Debug_Connection" priority="P0" purpose="Validate 'cordova_mobile_spec' app could debug by remote host" status="approved" type="Functional">
        <description>
          <pre_condition>
            1. Make sure 'remotedebugging.apk' is installed.
          </pre_condition>
          <test_script_entry>/opt/cordova-feature-android-tests/feature/CrossWalk_Cordova_Remote_Debug_Connection.html </test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/Mobile Spec" execution_type="manual" id="CrossWalk_Cordova_Remote_Debug_CheckInfo" priority="P1" purpose="Validate 'cordova_mobile_spec' app could be checked by remote debug" status="approved" type="Functional">
        <description>
          <pre_condition>
            1. Make sure 'remotedebugging.apk' app info is  shown in the spection page.
          </pre_condition>
          <test_script_entry>/opt/cordova-feature-android-tests/feature/CrossWalk_Cordova_Remote_Debug_CheckInfo.html </test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/Mobile Spec" execution_type="manual" id="CrossWalk_Cordova_Remote_Debug_Breakpoints" priority="P1" purpose="Validate 'cordova_mobile_spec' app could be added Breakpoints by remote debug" status="approved" type="Functional">
        <description>
          <pre_condition>
            1. Make sure 'remotedebugging.apk' app info is  shown in the spection page.
          </pre_condition>
          <test_script_entry>/opt/cordova-feature-android-tests/feature/CrossWalk_Cordova_Remote_Debug_Breakpoints.html </test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/Mobile Spec" execution_type="manual" id="CrossWalk_Cordova_Remote_Debug_Modification" priority="P1" purpose="Validate CrossWalk viewed webpage could be modified by remote debug" status="approved" type="Functional">
        <description>
          <pre_condition>
            1. Make sure 'remotedebugging.apk' app lanunched by remote debug mode.
          </pre_condition>
          <test_script_entry>/opt/cordova-feature-android-tests/feature/CrossWalk_Cordova_Remote_Debug_Modification.html </test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
