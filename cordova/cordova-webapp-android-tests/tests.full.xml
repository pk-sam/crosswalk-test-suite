<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Cordova Web Apps" name="cordova-webapp-android-tests">
    <set name="WebApp_auto" type="pyunit">
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Project_Create" priority="P0" purpose="Validate Crosswalk Cordova WebApp project could be created successful" status="approved" type="Functional">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_create.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Project_Build" priority="P0" purpose="Validate Crosswalk Cordova WebApp Project could be builded successful" status="approved" type="Functional">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_build.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Project_Run" priority="P0" purpose="Validate Crosswalk Cordova app project could be installed and runing on device" status="approved" type="Functional">
        <description>
           <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_run.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Install" priority="P0" purpose="Validate Cordova WebApp could be installed successfully" status="approved" type="Functional">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_install.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Launch" priority="P0" purpose="Validate Cordova WebApp could be launched successfully" status="approved" type="Functional">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_launch.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Close" priority="P0" purpose="Validate Cordova WebApp could be closed successfully" status="approved" type="Functional">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_close.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Uninstall" priority="P0" purpose="Validate Cordova WebApp could be uninstalled successfully" status="approved" type="Functional">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_uninstall.py</test_script_entry>
        </description>
      </testcase>
    </set>
    <set name="WebApp_manual" type="js">
      <testcase component="Cordova Features/WebApp" execution_type="manual" id="Crosswalk_Cordova_ADT_Project_Import" priority="P0" purpose="Validate Cordova project could be inport by ADT successfully" status="approved" type="Functional">
        <description>
          <pre_condition>
            1. Connect the device to the host with USB cable.
            2. Make sure the adt eclipse has been installed.
            3. There has one available project in crosswalk-cordova-&lt;version&gt;-arm.zip
          </pre_condition>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/Crosswalk_Cordova_ADT_Project_Import.html </test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="manual" id="Crosswalk_Cordova_WebApp_Icon" priority="P0" purpose="Validate if Cordova WebApp icon display normally" status="approved" type="Functional">
        <description>
           <test_script_entry>/opt/cordova-webapp-android-tests/webapp/Crosswalk_Cordova_WebApp_Icon.html </test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
