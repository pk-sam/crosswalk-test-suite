        <description>
          <test_script_entry>/opt/usecase-wrt-auto-tests/samples/PackertoolCompressor/compressor.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Use Cases/WRT" execution_type="auto" id="Crosswalk_compressorcss" purpose="Validate if the Packaging Tool works well with compressor option and the value is css">
        <description>
          <test_script_entry>/opt/usecase-wrt-auto-tests/samples/PackertoolCompressorCss/compressorcss.py</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
