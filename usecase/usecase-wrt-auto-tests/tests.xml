<test_definition>
  <suite category="Usecase WRT" name="usecase-wrt-auto-tests">
    <set name="usecase" type="pyunit">
      <testcase component="Crosswalk Use Cases/WRT" execution_type="auto" id="Crosswalk_absolutePath" purpose="Validate if the packer tool can work well with run script make_apk.py in different path" subcase="3">
        <description>
          <test_script_entry>/opt/usecase-wrt-auto-tests/samples/ApkBuildAnyLocation/absolutePath.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Use Cases/WRT" execution_type="auto" id="Crosswalk_anyLocation" purpose="Validate if the packer tool can work well with set the make_apk.py to environment path" subcase="3">
        <description>
          <test_script_entry>/opt/usecase-wrt-auto-tests/samples/ApkBuildAnyLocation/anyLocation.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Use Cases/WRT" execution_type="auto" id="Crosswalk_helpversion" purpose="Validate if the Packaging Tool works well with help and version options" subcase="2">
        <description>
          <test_script_entry>/opt/usecase-wrt-auto-tests/samples/PackertoolHelpVersion/helpversion.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Use Cases/WRT" execution_type="auto" id="Crosswalk_versionupdate" purpose="Validate if the Packaging Tool works well when update the version value">
        <description>
          <test_script_entry>/opt/usecase-wrt-auto-tests/samples/WebAppVersionUpdate/versionupdate.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Use Cases/WRT" execution_type="auto" id="Crosswalk_projectdir" purpose="Validate if the Packaging Tool works well with project-dir options">
        <description>
          <test_script_entry>/opt/usecase-wrt-auto-tests/samples/ApkBuildTemporary/projectdir.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Use Cases/WRT" execution_type="auto" id="Crosswalk_projectonly" purpose="Validate if the Packaging Tool works well with project-only options" subcase="2">
