          <test_script_entry>/opt/usecase-wrt-auto-tests/samples/ApkBuildTemporary/projectonly.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Use Cases/WRT" execution_type="auto" id="Crosswalk_temporary" purpose="Validate if the Packaging Tool create a temporary floder during building" subcase="3">
