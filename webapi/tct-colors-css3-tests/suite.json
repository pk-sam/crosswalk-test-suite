{
    "pkg-blacklist": [
        "config.xml",
        "pack.py",
        "testcase.xsl",
        "testresult.xsl",
        "tests.css",
        "icon.png",
        "manifest.json",
        "suite.json",
        "inst.*"
    ],
    "pkg-list": {
        "apk,cordova": {
            "blacklist": [
                "*"
            ],
            "copylist": {
                "bddrunner": "bddrunner",
                "data.conf": "data.conf",
                "inst.apk.py": "inst.py",
                "tests.full.xml": "tests.full.xml",
                "tests.xml": "tests.xml",
                "css3-color-app/testscripts": "css3-color-app/testscripts",
                "css3-color-app/data": "data"
            },
            "pkg-app": {
                "apk-common-opts":"--enable-remote-debugging",
                "copylist": {
                    "PACK-TOOL-ROOT/resources/testharness": "resources",
                    "PACK-TOOL-ROOT/resources/webrunner": "webrunner"
                }
            },
            "subapp-list": {
                "css3-color-app": {
                    "apk-common-opts": "--enable-remote-debugging",
                    "apk-icon-opt": "",
                    "copylist": {
                        "../colors/csswg/bdd": "colors/csswg"
                    }
                }
            }
        },
        "apk-aio, cordova-aio": {
            "blacklist": [],
            "copylist": {
                "PACK-TOOL-ROOT/resources/testharness": "resources",
                "PACK-TOOL-ROOT/resources/webrunner": "webrunner"
             },
            "subapp-list": {
                "css3-color-app": {
                    "apk-common-opts": "--enable-remote-debugging",
                    "apk-icon-opt": "",
                    "copylist": {
                        "../colors/csswg/bdd": "csswg"
                    }
                }
            }
        },
        "wgt": {
            "blacklist": [
                "*"
            ],
            "copylist": {
                "inst.wgt.py": "inst.py",
                "tests.full.xml": "tests.full.xml",
                "tests.xml": "tests.xml"
            },
            "pkg-app": {
                "copylist": {
                    "PACK-TOOL-ROOT/resources/testharness": "resources",
                    "PACK-TOOL-ROOT/resources/webrunner": "webrunner"
                }
            }
        },
        "xpk": {
            "blacklist": [
                "*"
            ],
            "copylist": {
                "inst.xpk.py": "inst.py",
                "tests.full.xml": "tests.full.xml",
                "tests.xml": "tests.xml"
            },
            "pkg-app": {
                "blacklist": [],
                "copylist": {
                    "PACK-TOOL-ROOT/resources/testharness": "resources",
                    "PACK-TOOL-ROOT/resources/webrunner": "webrunner"
                }
            }
        }
    },
    "pkg-name": "tct-colors-css3-tests"
}
