{
    "pkg-blacklist": [
        "config.xml",
        "config.xml.*",
        "pack.py",
        "testcase.xsl",
        "testresult.xsl",
        "tests.css",
        "icon.png",
        "manifest.json",
        "suite.json",
        "*-py",
        "inst.*"
    ],
    "pkg-list": {
        "apk,cordova": {
            "blacklist": [],
            "copylist": {
                "PACK-TOOL-ROOT/resources/bddrunner": "bddrunner",
                "html5-sandbox-app/testscripts": "html5-sandbox-app/testscripts",
                "inst.apk.py": "inst.py",
                "PACK-TOOL-ROOT/resources/testharness": "resources",
                "PACK-TOOL-ROOT/resources/webrunner": "webrunner",
                "tests.full.xml": "tests.full.xml",
                "tests.xml": "tests.xml"
            },
            "pkg-app": {
                "blacklist": [],
                "hosted-app": "true"
            },
            "subapp-list": {
                "html5-sandbox-app": {
                    "apk-common-opts": "--enable-remote-debugging",
                    "copylist": {
                        "../sandbox/w3c/bdd": "w3c",
                        "../sandbox/w3c/support": "w3c/support"
                    }
                }
            }
        },
        "apk-aio, cordova-aio": {
            "blacklist": [],
            "copylist": {
                "PACK-TOOL-ROOT/resources/testharness": "resources",
                "PACK-TOOL-ROOT/resources/webrunner": "webrunner"
            }
        },
        "wgt": {
            "blacklist": [],
            "copylist": {
                "inst.wgt.py": "inst.py",
                "PACK-TOOL-ROOT/resources/testharness": "resources",
                "PACK-TOOL-ROOT/resources/webrunner": "webrunner",
                "tests.full.xml": "tests.full.xml",
                "tests.xml": "tests.xml"
            },
            "pkg-app": {
                "blacklist": [],
                "hosted-app": "true"
            }
        },
        "xpk": {
            "blacklist": [],
            "copylist": {
                "inst.xpk.py": "inst.py",
                "PACK-TOOL-ROOT/resources/testharness": "resources",
                "PACK-TOOL-ROOT/resources/webrunner": "webrunner",
                "tests.full.xml": "tests.full.xml",
                "tests.xml": "tests.xml"
            },
            "pkg-app": {
                "blacklist": [],
                "hosted-app": "true"
            }
        }
    },
    "pkg-name": "tct-sandbox-html5-tests"
}
