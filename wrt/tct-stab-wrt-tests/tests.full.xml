              </steps>
           <test_script_entry test_script_expected_result="0" timeout="9000">app_user@TESTER-HOME-DIR/content/tct/opt/tct-stab-wrt-tests/scripts/wrt_pm_WRTInstaller.sh setting-bs-enable.wgt</test_script_entry>
