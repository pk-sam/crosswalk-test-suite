<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Crosswalk WRT" name="wrt-manifest2-android-tests">
    <set name="manifest2" type="pyunit">
      <testcase component="Crosswalk WRT/Manifest" execution_type="auto" id="Crosswalk_combinationtest" purpose="Validate if app can packing ,install and launch">
        <description>
          <test_script_entry>/opt/wrt-manifest2-android-tests/manifest2/combinationtest.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Manifest" execution_type="auto" id="Crosswalk_descriptiontest" purpose="Validate if value of the description in manifest file" subcase="4">
        <description>
          <test_script_entry>/opt/wrt-manifest2-android-tests/manifest2/descriptiontest.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Manifest" execution_type="auto" id="Crosswalk_negativetest" purpose="Validate if negative test about no name, start_url and description in manifest file" subcase="4">
        <description>
          <test_script_entry>/opt/wrt-manifest2-android-tests/manifest2/negativetest.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Manifest" execution_type="auto" id="Crosswalk_starturltest" purpose="Validate if value of the start_url in manifest file" subcase="4">
        <description>
          <test_script_entry>/opt/wrt-manifest2-android-tests/manifest2/starturltest.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Manifest" execution_type="auto" id="Crosswalk_other" purpose="Validate if the value of name is null in manifest file" subcase="1">
        <description>
          <test_script_entry>/opt/wrt-manifest2-android-tests/manifest2/name_null_value.py</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
