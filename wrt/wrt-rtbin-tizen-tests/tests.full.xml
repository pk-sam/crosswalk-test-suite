<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Crosswalk WRT" name="wrt-rtbin-tizen-tests">
    <set name="rtbinauto" type="script">
      <testcase component="Crosswalk WRT/Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_Mode" priority="P1" purpose="Validate Crosswalk support 'run-as-service' mode" status="approved" type="Functional">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is download to local.
          </pre_condition>
          <test_script_entry>app_user@TESTER-HOME-DIR/content/tct/opt/wrt-rtbin-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_Mode.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_Install" priority="P1" purpose="Validate use xwalk and pkgcmd install the same app" status="approved" type="Functional">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry>app_user@TESTER-HOME-DIR/content/tct/opt/wrt-rtbin-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_Uninstall" priority="P1" purpose="Validate Crosswalk support uninstalling apps in the 'run-as-service' mode" status="approved" type="Functional">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry>app_user@TESTER-HOME-DIR/content/tct/opt/wrt-rtbin-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_Uninstall.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_CheckDB" priority="P2" purpose="Validate use run as service install webapp the db if correct" status="approved" type="Functional">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is download to local.
          </pre_condition>
          <test_script_entry>app_user@TESTER-HOME-DIR/content/tct/opt/wrt-rtbin-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_CheckDB.sh</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
